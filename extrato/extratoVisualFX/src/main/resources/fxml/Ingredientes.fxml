<AnchorPane id="AnchorPane" minHeight="600.0" minWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.exacta.extratovisualfx.IngredientesController">
   <children>
      <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Ingredientes">
               <font>
                  <Font name="Segoe UI Semilight" size="48.0" />
               </font>
            </Text>
            <GridPane>
              <columnConstraints>
                  <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" maxWidth="150.0" minWidth="10.0" prefWidth="150.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="163.0" minWidth="10.0" prefWidth="163.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Button fx:id="btnRemover" alignment="CENTER" minWidth="150.0" mnemonicParsing="false" text="EXCLUIR" GridPane.columnIndex="2" GridPane.rowIndex="1">
                     <font>
                        <Font name="System Bold" size="15.0" />
                     </font>
                  </Button>
                  <Button fx:id="btnSalvar" alignment="CENTER" minWidth="150.0" mnemonicParsing="false" text="SALVAR" GridPane.columnIndex="2">
                     <font>
                        <Font name="System Bold" size="15.0" />
                     </font>
                  </Button>
                  <Text fx:id="lblDescricao" fontSmoothingType="LCD" strokeType="OUTSIDE" strokeWidth="0.0" text="Descrição">
                     <font>
                        <Font name="Segoe UI Semilight" size="16.0" />
                     </font>
                  </Text>
                  <TextField fx:id="txtDescricao" prefHeight="31.0" prefWidth="351.0" GridPane.columnIndex="1" />
                  <Text fx:id="lblAbreviacao" fontSmoothingType="LCD" strokeType="OUTSIDE" strokeWidth="0.0" text="Abreviação" GridPane.rowIndex="1">
                     <font>
                        <Font name="Segoe UI Semilight" size="16.0" />
                     </font>
                  </Text>
                  <TextField fx:id="txtAbreviacao" prefHeight="31.0" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <Text fx:id="lblTolerancia" fontSmoothingType="LCD" strokeType="OUTSIDE" strokeWidth="0.0" text="Tolerância" GridPane.rowIndex="2">
                     <font>
                        <Font name="Segoe UI Semilight" size="16.0" />
                     </font>
                  </Text>
                  <TextField fx:id="txtTolerancia" prefHeight="31.0" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
               </children>
            </GridPane>
            <ListView fx:id="ltvDados" />
         </children>
      </VBox>
   </children>
</AnchorPane>
