<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import java.lang.String?>
<AnchorPane id="AnchorPane" fx:id="apDados" minHeight="600.0" minWidth="800.0" prefHeight="664.0" prefWidth="962.0"
            xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="br.exacta.extratovisualfx.ListaOrdemController">
    <children>
        <VBox prefHeight="664.0" prefWidth="962.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Lista das Ordens de Produção">
                    <font>
                        <Font name="Segoe UI Semilight" size="42.0"/>
                    </font>
                </Text>
                <GridPane prefWidth="948.0">
                    <children>
                        <Text fontSmoothingType="LCD" strokeType="OUTSIDE" strokeWidth="0.0" text="Equipamento:"
                              GridPane.rowIndex="3">
                            <font>
                                <Font name="Segoe UI Semilight" size="16.0"/>
                            </font>
                            <GridPane.margin>
                                <Insets right="10.0"/>
                            </GridPane.margin>
                        </Text>
                        <ChoiceBox fx:id="cbbEquipamento" minWidth="300.0" GridPane.columnIndex="1"
                                   GridPane.rowIndex="3">
                            <items>
                                <FXCollections fx:factory="observableArrayList">
                                    <String fx:value="Equipamento 1"/>
                                    <String fx:value="Equipamento 2"/>
                                    <String fx:value="Equipamento 3"/>
                                </FXCollections>
                            </items>
                            <GridPane.margin>
                                <Insets right="10.0"/>
                            </GridPane.margin>
                        </ChoiceBox>
                        <Button id="btnPesquisar" fx:id="btnPesquisar" alignment="CENTER" minWidth="300.0"
                                mnemonicParsing="false" styleClass="acao-filtrar" text="Filtrar"
                                GridPane.columnIndex="2" GridPane.rowIndex="3"/>
                        <Text fontSmoothingType="LCD" strokeType="OUTSIDE" strokeWidth="0.0" text="Nova Ordem:"
                              GridPane.rowIndex="1">
                            <font>
                                <Font name="Segoe UI Semilight" size="16.0"/>
                            </font>
                            <GridPane.margin>
                                <Insets right="10.0"/>
                            </GridPane.margin>
                        </Text>
                        <Button id="btnNova" fx:id="btnNova" alignment="CENTER" minWidth="300.0" mnemonicParsing="false"
                                styleClass="acao-adicionar" text="Adicionar" GridPane.columnIndex="1"
                                GridPane.rowIndex="1">
                            <GridPane.margin>
                                <Insets right="10.0"/>
                            </GridPane.margin>
                        </Button>
                    </children>
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" maxWidth="180.0" minWidth="10.0"
                                           prefWidth="180.0"/>
                        <ColumnConstraints fillWidth="false" hgrow="NEVER"/>
                        <ColumnConstraints fillWidth="false" halignment="CENTER" hgrow="NEVER"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                </GridPane>
                <TableView fx:id="tvOrdens" VBox.vgrow="SOMETIMES">
                    <columns>
                        <TableColumn fx:id="colEquipamento" prefWidth="140.0" text="Equipamento"/>
                        <TableColumn fx:id="colOrdem" prefWidth="200.0" text="Ordem de Produção"/>
                        <TableColumn fx:id="colReceita" prefWidth="200.0" text="Receita"/>
                        <TableColumn fx:id="colBotoes" prefWidth="248.0" text="Ações"/>
                    </columns>
                </TableView>
            </children>
        </VBox>
    </children>
</AnchorPane>
